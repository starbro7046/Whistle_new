<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="35">

        <fragment
            android:id="@+id/googleMap"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/myloc" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="현재위치 로딩중..."
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/font"
                 />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/go"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/polica" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/safeZone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="false"
                        android:text="현재 00파출소가 가장 가깝습니다"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/font"
                        />

                    <TextView
                        android:id="@+id/loctext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="로딩중"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/font"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:alpha="0.35"
                android:background="@drawable/button_main"
                android:elevation="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/firstbar1" />

            <ImageButton
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_map"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/mapsec" />

            <ImageButton
                android:id="@+id/trigger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:alpha="0.35"
                android:background="@drawable/button_trigger"
                android:padding="0dp"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/zes1" />

            <ImageButton
                android:id="@+id/alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:alpha="0.35"
                android:background="@drawable/button_alarm"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/al2" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>